<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#F4F5F6"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/toolbar_icon_writing" />

    <EditText
        android:id="@+id/edittext_comment"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:background="@drawable/cbn_float_tool_bar_comment_edit_bg" />

    <ImageView
        android:id="@+id/imageview_comment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/toolbar_icon_chat" />

    <ImageView
        android:id="@+id/imageview_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@drawable/radar_card_around_collect" />

    <ImageView
        android:id="@+id/imageview_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/toolbar_icon_share" />

</LinearLayout>
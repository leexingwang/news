<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/action_bar"
        android:layout_alignParentTop="true"
        layout="@layout/cbn_settings_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cbn_broadcast"
                android:scaleType="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp" >

                <TextView
                    android:id="@+id/text_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在播放 :"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_now_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/text_now"
                    android:text="行情与个股"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_now"
                    android:layout_marginTop="16dp"
                    android:text="即将播放 :"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_next_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_now"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/text_next"
                    android:text="个股天天点播"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageview_broadcast_ad_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cbn_ad_default"
                android:scaleType="fitXY" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
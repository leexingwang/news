<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="40dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView_username"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_merchant_order_detail_list_menu_call_icon" />

        <EditText
            android:id="@+id/edit_Forgot_password_phonenumber"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/imageView_username"
            android:background="@drawable/cbn_login_edit_shape_write"
            android:gravity="center|left"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical|fill_horizontal" >

        <ImageView
            android:id="@+id/imageView_username"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_pc_account_username_icon_code" />

        <EditText
            android:id="@+id/edit_Forgot_password_verification_code"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/imageView_username"
            android:background="@drawable/cbn_login_edit_shape_write"
            android:gravity="center|left"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_Forgot_password_verification_code_submit"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/edit_Forgot_password_verification_code"
            android:background="@drawable/cbn_login_shape_blue"
            android:focusable="false"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_Forgot_password_submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/cbn_login_shape_blue"
        android:focusable="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
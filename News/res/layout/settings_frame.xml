<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF" >

    <LinearLayout
        android:id="@+id/cbn_person_ll_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imgbut_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@drawable/cbn_login_sz" />

        <com.base.common.ui.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/cbn_default" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="注册/登录"
                android:textColor="#555555"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/cbn_login_sc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:text="收藏"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/cbn_arrows_right"
                android:text="收藏"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cbn_gupiao_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/cbn_login_hd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:text="订阅"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/cbn_arrows_right"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cbn_gupiao_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/cbn_login_tj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:text="活动"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/cbn_arrows_right"
                android:text="收藏"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cbn_gupiao_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/cbn_login_ss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:gravity="bottom"
                android:text="推荐"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/cbn_arrows_right"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cbn_gupiao_line" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>